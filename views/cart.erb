<h2>Your cart!!</h2>
<h2>ordered pizzas:</h2>

<table border="1" cellspacing="0" cellpadding="10">
 <thead>
  <tr>
    <th>item</th>
    <th>price</th>
    <th>amount</th>
  </tr>
</thead>
<tbody>
  <% total_qty = 0 %>
  <% total_price = 0 %>

  <% @items.each do |item| %>
  <tr>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %> руб.</td>
    <td><%= item[1] %></td>
  </tr>

  <% total_qty += item[1].to_i %>
  <% total_price += item[0].price * total_qty %>
  <% end %>

  <tr style="background: lightblue;">
    <td><strong>Сумма:</strong></td>
    <td><%= total_price %> руб.</td>
    <td><%= total_qty %></td>
  </tr>
</tbody>
</table>



<form action="/place_order" method="POST" role="form">
	<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />

	<div class="form-group">
		<label>Name:</label>
		<input type="text" name="order[name]" class="form-control" placeholder="Your name" value="">
	</div>

<div class="form-group">
		<label>Phone:</label>
		<input type="text" name="order[phone]" class="form-control" placeholder="Your phone" value="">
	</div>
	<div class="form-group">
		<label>Addrressess:</label>
		<textarea type="text" name="order[address]" class="form-control" placeholder="your address" value=""></textarea>
	</div>
	<button type="submit" class="btn btn-primary btn-lg"> Place this order!</button>
	
	<button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>

</form>














